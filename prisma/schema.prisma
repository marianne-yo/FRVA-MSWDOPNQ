generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum RiskAnswer {
  WITHIN_YEAR
  TWO_TO_FIVE_YEARS
  NONE
}

model SurveyResponse {
  id        String   @id @default(cuid())
  barangay  String
  createdAt DateTime @default(now())
  risks     ResponseRisk[]
}

model RiskItem {
  id       Int    @id
  question String
  responses ResponseRisk[]
}

model ResponseRisk {
  id           String   @id @default(cuid())
  response     SurveyResponse @relation(fields: [responseId], references: [id])
  responseId   String
  riskItem     RiskItem @relation(fields: [riskItemId], references: [id])
  riskItemId   Int
  answer       RiskAnswer
}



